<?xml version="1.0" encoding="utf-8"?>
<!-- Gray shadow. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item
        android:left="3dp"
        android:top="5dp">
        <shape>
            <gradient
                android:endColor="#2E788F"
                android:centerColor="#393ABD"
                android:startColor="#4B257C" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="5dp"
        android:right="3dp">
        <shape>
            <gradient
                android:endColor="#4DC3E6"
                android:centerColor="#5558E9"
                android:startColor="#764AB4" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>