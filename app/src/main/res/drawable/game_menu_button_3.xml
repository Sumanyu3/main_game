<?xml version="1.0" encoding="utf-8"?>
<!-- Gray shadow. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item
        android:left="3dp"
        android:top="5dp">
        <shape>
            <gradient
                android:endColor="#D14454"
                android:centerColor="#751212"
                android:startColor="#000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="5dp"
        android:right="3dp">
        <shape>
            <gradient
                android:endColor="#E76272"
                android:centerColor="#AF3636"
                android:startColor="#360404" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>