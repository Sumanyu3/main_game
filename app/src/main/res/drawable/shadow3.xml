<?xml version="1.0" encoding="utf-8"?>
<!-- Gray shadow. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item
        android:left="3dp"
        android:top="5dp">
        <shape>
            <gradient
                android:endColor="#d64157"
                android:startColor="#A2172B" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="5dp"
        android:right="3dp">
        <shape>
            <gradient
                android:endColor="#F56276"
                android:centerColor="#DD2F46"
                android:startColor="#DD102E" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>