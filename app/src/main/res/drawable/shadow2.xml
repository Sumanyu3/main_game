<?xml version="1.0" encoding="utf-8"?>
<!-- Gray shadow. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item
        android:left="3dp"
        android:top="5dp">
        <shape>
            <gradient
                android:startColor="#502163"
                android:endColor="#7D3899" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="5dp"
        android:right="3dp">
        <shape>
            <gradient
                android:startColor="#5D1E77"
                android:centerColor="#993bbf"
                android:endColor="#C761F0" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>